<div class="row">
  <div class="col s9">
    <div class="card border-0">    
      <div class="card-content">
        <span class="card-title"><h4><%= type_of_form %></h4></span>
        <div class="card-body">
          <%= simple_form_for(object, :url => method_url, :method => :update) do |f| %>
            <%= f.error_notification %>
            <div class="row">
              <div class="form-group">
                <%= render partial: "#{fields}", locals: { f: f }, :class=>'form-control' %>
              </div>
            </div>
          </div>  
        </div>
      </div>
      <div class="row">
        <div class="form-actions col s9">
          <%= f.button :submit, 'Next', :class=>'btn btn-info' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
