<p id="notice"><%= notice %></p>

<h1>Messages</h1>

<table class='table'>
  <thead>
    <tr>
      <th>User</th>
      <th>Date</th>
      <th>Alerts</th>
      <th>Reminders</th>
      <th>Device Alerts</th>
      <th>Device Reminders</th>
      <th>Self Reflection</th>
      <th>Joint Reflection</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.order(:user_id, :date).each do |m| %>
      <tr>
        <td><%= m.user.email %></td>
        <td><%= m.date %></td>
        <td><%= m.alerts %></td>
        <td><%= m.reminders %></td>
        <td><%= m.device_alerts %></td>
        <td><%= m.device_reminders %></td>
        <td><%= m.self_reflection %></td>
        <td><%= m.joint_reflection %></td>
        <td><%= link_to 'Edit', edit_message_path(m) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
