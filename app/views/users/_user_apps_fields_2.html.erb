<div class="card-body">
    <h5>Do you use multi-factor authentication (eg. Duo Security) for the shared accounts below?</h5>
    <%= f.simple_fields_for :user_apps do |user_apps_form| %>
        <% if user_apps_form.object.accessed_today %>
                <%= user_apps_form.label :q1, user_apps_form.object.app.name.split.map(&:capitalize)*' ' %>
                <%= user_apps_form.select :q1, ['Yes', 'No', "I don't know"] %>
        <% end %>
    <% end %>
</div>

<div class="card-body">
    <h5>Do your passwords for the accounts below contain special characters and a combination of letters, numbers, and symbols?</h5>
    <%= f.simple_fields_for :user_apps do |user_apps_form| %>
        <% if user_apps_form.object.accessed_today %>
                <%= user_apps_form.label :q2, user_apps_form.object.app.name.split.map(&:capitalize)*' ' %>
                <%= user_apps_form.select :q2, ['Yes', 'No', "I don't know"] %>
        <% end %>
    <% end %>
</div>
