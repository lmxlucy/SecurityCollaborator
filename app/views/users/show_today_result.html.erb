<h4> Security Evaluation</h4>
<p>
  <strong>Date:</strong>
  <%= @message.date %>
</p>
</br></br>
<% if !@message.alerts.empty? %>
    <h4> Alerts </h4>
    <% @message.alerts.each do |alert| %>
        <% if alert.include? 'account is vulnerable to hacks. Please click here to learn how to set up a multi-factor authentication as soon as possible!' %>
            <% m = alert.split('here') %>
            <%= m.first %> <%= link_to 'here' , popup_user_apps_q1_path, :onclick => 'return openPopup(this);' %> <%= m.last %>
        <% end %>
    <% end %>
<% end %>
<% if !@message.reminders.empty? %>
    <h4> Reminders </h4>
    <% @message.reminders.each do |reminder| %>
        <%= reminder %>
    <% end %>
<% end %>
<% if !@message.device_alerts.empty? %>
    <h4> Device Alerts </h4>
    <% @message.device_alerts.each do |d_alert| %>
        <%= d_alert %>
    <% end %>
<% end %>
<% if !@message.device_reminders.empty? %>
    <h4> Device Reminders </h4>
    <% @message.device_reminders.each do |d_reminder| %>
        <%= d_reminder %>
    <% end %>
<% end %>
<% if !@message.perfect.empty? %>
    <%= @message.perfect %>
<% end %>
</br></br>

