<h4> Your Security Evaluation <%= @message.date %></h4>
<% if !@message.alerts.empty? %>
    <div class="card-body">
        <div class="row no-gutters">
            <div class="col-auto">
                <%= image_tag "alert.png", alt:"Alert Image", :size=>"60x48", :class=>'img-responsive'%>
            </div>
            <div class="col">
                <div class="card-block px-2 mb-2">
                    <h5 class="text-warning"> Alerts </h5>
                    <div class="card-body pl-0 py-0">
                        <% @message.alerts.each do |alert| %>
                            <p>&#9642;
                            <% if (alert.include? 'Click here for a security checklist.') || 
                                (alert.include? 'Please click here to learn how to set up strong password and update it as soon as possible!') %>
                                <% m = alert.split('here') %>
                                <% if alert.include? 'Please click here to learn how to set up strong password and update it as soon as possible!' %>
                                    <%= m.first %> <%= link_to 'here' , popup_user_apps_q2_path, :onclick => "window.open(this.href,'popup_q2', 'height=100, width=600');return false;" %> <%= m.last %></br>
                                <% else %>
                                    <%= m.first %> <%= link_to 'here' , popup_user_apps_q6_path, :onclick => "window.open(this.href,'popup_q6', 'height=100, width=600');return false;" %> <%= m.last %></br>
                                <% end %> 
                            <% else %>
                                <%= alert %>
                            <% end %>
                            </p>
                        <% end %>
                    </div>
                </div>
                <div class="card-block px-2">
                    <% if !@message.device_alerts.empty? %>
                            <h5> Device Alerts </h5>
                            <div class="card-body m-0 pl-0 py-0">
                                <% @message.device_alerts.each do |d_alert| %>
                                    <p>&#9642;
                                        <%= auto_link(d_alert, :html => { :target => '_blank'}) %>
                                    </p>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
<% end %>
<% if !@message.reminders.empty? %>
    <div class="card-body">
        <div class="row no-gutters">
                <div class="col-auto">
                    <%= image_tag "reminder.png", alt:"Reminder Image", :size=>"60x48", :class=>'img-responsive'%>
                </div>
                <div class="col">
                    <div class="card-block px-2 mb-2">
                        <h5 class="text-danger"> Reminders </h5>
                        <div class="card-body m-0 pl-0 py-0">
                            <% @message.reminders.each do |reminder| %> 
                                <p>&#9642;
                                <% if (reminder.include? 'Click here for a security checklist.') || 
                                    (reminder.include? 'Please click here to learn how to set up strong password and update it as soon as possible!') %>
                                    <% m = reminder.split('here') %>
                                    <% if reminder.include? 'Please click here to learn how to set up strong password and update it as soon as possible!' %>
                                        <%= m.first %> <%= link_to 'here' , popup_user_apps_q2_path, :onclick => "window.open(this.href,'popup_q2', 'height=100, width=600');return false;" %> <%= m.last %></br>
                                    <% else %>
                                        <%= m.first %> <%= link_to 'here' , popup_user_apps_q6_path, :onclick => "window.open(this.href,'popup_q6', 'height=100, width=600');return false;" %> <%= m.last %></br>
                                    <% end %> 
                                <% else %>
                                    <%= reminder %>
                                <% end %>
                                </p>
                            <% end %>
                        </div>
                    </div>
                    <div class="card-block px-2">
                        <% if !@message.device_reminders.empty? %>
                            <h5> Device Reminders </h5>
                            <div class="card-body m-0 pl-0 py-0">
                                <ul class="list-group list-group-flush">
                                    <% @message.device_reminders.each do |d_reminder| %>
                                        <li class="list-group-item>
                                            <p>&#9642;<%= auto_link(d_reminder, :html => { :target => '_blank'}) %></p>
                                        </li>
                                    <% end %>
                                </ul>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
    </div>
<% end %>


<% if !@message.perfect.empty? %>
    <%= @message.perfect %>
<% end %>
